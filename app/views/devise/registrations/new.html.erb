<h2>Sign up for Half Savage.</h2>

<p>Be one of the few, the proud, the nerdy.</p>

<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: {class: 'form-horizontal'}
    ) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= f.text_field :username,
                       autofocus: true,
                       required: 'required',
      class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gender_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= collection_select 'member', 'gender_id', Gender.all,
                            :id,
                            :gender_description, {},
       {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <div class="input-group date" data-date-format="dd-mm-yyyy" data-date="12-02-2012">
        <%= f.text_field :date_of_birth,
                         :required => 'required',
                         :class => 'form-control' %>
        <span class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.email_field :email,
                        required: true,
                        class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= f.password_field :password,
                           required: true,
      class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-3">
    <p><%= f.submit 'Sign me up already, boss.', class:'btn btn-primary' %></p>
     </div>
  </div>
<% end %>

