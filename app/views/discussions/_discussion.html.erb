<div class="discussion" data-slug="<%=discussion.slug%>">
  <p style="float: left; padding-right: 1em">
    <% if discussion.member.fake_portrait.present? -%>
      <img src="/assets/members/<%=discussion.member.fake_portrait%>.jpg" style="width:48px; height:48px">
    <% else -%>
      <img data-src="holder.js/48x48/#fff:#ddd">
    <% end -%>
  </p>
  <h5><a href="/discussions/<%=discussion.slug%>"><%=discussion.subject%></a>

  </h5>
  <p class="discussion-quote text-muted">
      &ldquo;<%=truncate(discussion.body, length:120, separator:' ', omission: '...')%>&rdquo;
  </p>
  <div class="discussion-quote-fade">

  </div>
  <p>
    <span class="text-muted">posted by <%=member_link(discussion.username)%> <%= time_ago_in_words(discussion.created_at) %> ago</span>
 <% if discussion.reply_count>0 -%>
      <span class="text-muted" style="padding-left: 1em"><i class="fa fa-comment-o"></i>
      <small><%= pluralize(discussion.reply_count, 'replies')%></small>
    </span>
 <% end -%>
  </p>
</div>